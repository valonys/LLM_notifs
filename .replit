modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["bash", "cargo", "glibcLocales", "libiconv", "pgadmin4", "pkg-config", "rustc"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DigiTwin RAG Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DigiTwin RAG App"

[[workflows.workflow]]
name = "DigiTwin RAG Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "DigiTwin RAG App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000 --server.address 0.0.0.0"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[agent]
integrations = ["flask_supabase==1.0.0"]
