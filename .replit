modules = ["python-3.11", "postgresql-16", "python3"]

[nix]
channel = "stable-25_05"
packages = ["bash", "cargo", "glibcLocales", "libiconv", "pgadmin4", "pkg-config", "rustc"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DigiTwin RAG"

[[workflows.workflow]]
name = "DigiTwin RAG"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000 --server.address 0.0.0.0 --server.headless true"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8001
externalPort = 3000

[agent]
integrations = ["flask_supabase==1.0.0"]
